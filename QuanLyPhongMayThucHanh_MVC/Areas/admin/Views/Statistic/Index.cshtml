
@{
    ViewBag.Title = "Statistic";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewData["icon"] = "fa fa-bar-chart-o fa-fw";
    ViewData["url"] = "/admin/statistic";
}

<div class="row">
    <div class="col-md-4 form-group">
        <label>Faculty</label>
        <select class="form-control" id="slFaculties"></select>
    </div>
    <div class="col-md-4">
        <label>Classroom</label>
        <select class="form-control" id="slClassrooms"></select>
    </div>

    <div class="col-md-4 form-group">
        <label>Lecturer</label>
        <select class="form-control" id="slLecturers"></select>
    </div>
</div>
<div class="row" style="margin-top:5px;">
    <div class="col-md-2 form-group">
        <div class="form-group">
            <label>From date</label>
            <div class="input-group date" id="dtpFromDate">
                <input type="text" class="form-control">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-2 form-group">
        <div class="input-group">
            <label>To date</label>
            <div class="input-group date" id="dtpToDate">
                <input type="text" class="form-control">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>           
        </div>
    </div>
    <div class="col-md-4 form-group">
        <label>Subject</label>
        <select class="form-control" id="slSubjects"></select>
    </div>
    <div class="col-md-4">
        <div class="input-group" style="margin-top:20px;">
            <input type="text" class="form-control" id="txtKeyword" placeholder="Enter your keyword ...">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info" id="btnSearch">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Search...
                </button>
                <button type="button" class="btn btn-info" id="btnExportToExcel" style="margin-left:5px; background-color:#00ffff !important;">
                    <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                    Export
                </button>
            </span>
        </div>
    </div>
</div>


<div class="table-responsive" style="margin-top:10px; height:300px; overflow-y: auto;">
    <table class="table table-hover-color table-bordered" style="max-height: 300px; overflow-y: scroll;">
        <thead>
            <tr>
                <th>#</th>
                <th>Faculty</th>
                <th>Subject</th>
                <th>Classroom</th>
                <th>Lecturer</th>
                <th>Semester</th>
                <th>Times</th>
            </tr>
        </thead>
        <tbody id="tblData">  </tbody>
    </table>

</div>





@section scripts{
<link href="~/Assets/plugins/bootstrap-glyphicon/bootstrap-glyphicons.css" rel="stylesheet" />
<link href="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Assets/plugins/bootstrap-datetimepicker/moment.min.js"></script>
    <script src="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Assets/plugins/xlxs/xlsx.full.min.js"></script>
    <script src="~/Assets/admin/statistic.js"></script>
}





