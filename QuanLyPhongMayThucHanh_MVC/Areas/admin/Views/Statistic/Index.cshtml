
@{
    ViewBag.Title = "Statistic";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewData["icon"] = "fa fa-bar-chart-o fa-fw";
    ViewData["url"] = "/admin/statistic";
}

<div class="row">
    <div class="col-md-4 form-group">
        <label>Faculty</label>
        <select class="form-control" id="slFaculties"></select>
    </div>
    <div class="col-md-4">
        <label>Classroom</label>
        <select class="form-control" id="slClassrooms"></select>
    </div>

    <div class="col-md-4 form-group">
        <label>Lecturer</label>
        <select class="form-control" id="slLecturers"></select>
    </div>
</div>
<div class="row" style="margin-top:5px;">
    <div class="col-md-2 form-group">
        <div class="form-group">
            <label>From date</label>
            <div class="input-group date" id="dtpFromDate">
                <input type="text" class="form-control">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-2 form-group">
        <div class="input-group">
            <label>To date</label>
            <div class="input-group date" id="dtpToDate">
                <input type="text" class="form-control">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>           
        </div>
    </div>
    <div class="col-md-4 form-group">
        <label>Subject</label>
        <select class="form-control" id="slSubjects"></select>
    </div>
    <div class="col-md-4">
        <div class="input-group" style="margin-top:20px;">
            <input type="text" class="form-control" id="txtKeyword" placeholder="Enter your keyword ...">
            <span class="input-group-btn">
                <button type="button" class="btn btn-info" id="btnSearch">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Search...
                </button>
                <button type="button" class="btn btn-info" id="btnExportToExcel" style="margin-left:5px; background-color:#00ffff !important;">
                    <i class="fa fa-file-excel-o" aria-hidden="true"></i>
                    Export
                </button>
            </span>
        </div>
    </div>
</div>


<div class="table-responsive" style="margin-top:10px;">
    <table class="table table-hover-color" style="max-height: 300px; overflow-y: scroll;">
        <thead>
            <tr>
                <th>#</th>
                <th>Faculty</th>
                <th>Subject</th>
                <th>Classroom</th>
                <th>Lecturer</th>
                <th>School year</th>
                <th>Enrollment</th>
                <th>Times</th>
            </tr>
        </thead>
        <tbody id="tblProgresses">  </tbody>
    </table>
    <div class="row">
        <div class="col-md-2 col-md-offset-10">
            <select class="form-control" id="slPageSize">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
                <option value="500">500</option>
                <option value="1000">1000</option>
                <option value="0">All</option>
            </select>
        </div>
    </div>

</div>

<ul data-hover="" class="pagination mtm mbm" id="pagination"></ul>


<!-- Modal -->
<div id="progressModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle">Add new progress</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 form-group">
                        <label>Faculty</label>
                        <select class="form-control" id="slFaculties"></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label>Class</label>
                        <select class="form-control" id="slClassrooms"></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label>Subject</label>
                        <select class="form-control" id="slSubjects"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 form-group">
                        <label>School year</label>
                        <select class="form-control" id="slSchoolYears"></select>
                    </div>
                    <div class="col-md-2 form-group">
                        <label>Semester</label>
                        <select class="form-control" id="slSemesters"></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label>Lecturer</label>
                        <select class="form-control" id="slLecturers"></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label>Number of students</label>
                        <input type="number" id="txtNumberOfStudents" class="form-control" min="1">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmit">Submit changes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



@section scripts{
<link href="~/Assets/plugins/bootstrap-glyphicon/bootstrap-glyphicons.css" rel="stylesheet" />
<link href="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Assets/plugins/bootstrap-datetimepicker/moment.min.js"></script>
    <script src="~/Assets/plugins/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Assets/plugins/xlxs/xlsx.full.min.js"></script>
    <script src="~/Assets/admin/statistic.js"></script>
}





