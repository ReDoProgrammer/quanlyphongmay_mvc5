@{
    ViewBag.Title = "Giảng viên đăng nhập - Hệ thống quản lý phòng máy thực hành";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">


<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800">
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,700,300">
    <link type="text/css" rel="stylesheet" href="/Assets/styles/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/Assets/styles/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/Assets/styles/animate.css">
    <link type="text/css" rel="stylesheet" href="/Assets/styles/main.css">
    <link type="text/css" rel="stylesheet" href="/Assets/styles/style-responsive.css">
    <link href="~/Assets/plugins/toast/jquery.toast.min.css" rel="stylesheet" />
</head>
<body class="">
    <div class="page-form">
        <div class="panel panel-blue">
            <div class="panel-body pan">
                <div class="form-horizontal">
                    <div class="form-body login-padding">                       
                        <div class="form-group">
                            <div class="col-md-3">
                                <img src="/Assets/images/logo.png" class="img-responsive" style="margin-top: -10px;" />
                            </div>
                            <div class="col-md-9">
                                <h2>Login</h2>
                                <p>
                                    Just sign in and we'll send you on your way
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputName" class="col-md-3 control-label">
                                Username:
                            </label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    <i class="fa fa-user"></i>
                                    <input id="txtUsername" type="text" placeholder="" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="col-md-3 control-label">
                                Password:
                            </label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    <i class="fa fa-lock"></i>
                                    <input id="txtPassword" type="password" placeholder="" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mbn">
                            <div class="col-lg-12">
                                <div class="form-group mbn">                                    
                                    <div class="col-lg-12 text-center">                                       
                                        <button id="btnLogin" class="btn btn-default sign-btn">
                                            Sign In
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <p style="margin-top:10px;">
                                    Don't have account?
                                    <a href="/account/signup" style="color:blue; font-weight:bold;">Register here</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <script src="~/Assets/script/jquery-1.10.2.min.js"></script>
    <script src="~/Assets/plugins/toast/jquery.toast.min.js"></script>
<script src="~/Assets/defined/account.js"></script>
</body>

</html>
